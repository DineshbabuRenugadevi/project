<h1> Listing of all Books </h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Count</th>
            <th colspan = "4">Actions</th>
        </tr>
    </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.description %></td>
                    <td><%= format("%.2f" , "#{book.price}") %></td>
                    <td><%= book.count %></td>
                    
                    <td><%= link_to "Show" , book_path(book) %></td>
                    <td><%= link_to "Edit" , edit_book_path(book) %></td>
                    <td><%= link_to 'Delete', book_path(book), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %></td>
                    
                </tr>
           <% end %>
        </tbody>
</table>
 <p colspan = "3">
<%= link_to "Create New Book" , "books/new" %>
</p>