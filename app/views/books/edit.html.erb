<h1>Edit the File</h1>

<% if @book.errors.any? %>
    <h2> Below errors Prevented during saving </h2>
        <ul>
            <% @book.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
        </ul>

<% end %>



<%= form_with(model: @book, local: true)  do |f| %>

    <p>
    <%= f.label :title %> </br>
    <%= f.text_field :title %> 
    </p>

    <p>
    <%= f.label :description %> </br>
    <%= f.text_area :description %> 
    </p>

    <p>
    <%= f.label :price %> </br>
    <%= f.text_field :price %> 
    </p>

    <p>
    <%= f.label :count %> </br>
    <%= f.text_field :count %> 
    </p>

    <p>
    <%= f.submit %>  
    </p>

<% end %>

<%= link_to "Return Back to Book Listing Page" , books_path %>
